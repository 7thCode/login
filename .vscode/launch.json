{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch TypeScript",
            "preLaunchTask": "Compile TypeScript",
            "cwd": "${workspaceFolder}",
            "program": "bin/www",
            "outFiles": [
              "${workspaceFolder}/build/**/*.js"
            ],
            "skipFiles": [
				      "<node_internals>/**"
            ],
            "outputCapture": "std"
        }
    ]
}
